{% extends 'base.html.twig' %} {% block body %}
<div class="main-panel">
    <!-- BEGIN : Main Content-->
    <div class="main-content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12">
                    <div class="content-header">{{ title }}</div>
                </div>
            </div>


            <section id="configuration">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body">
                                    <div class="col-12">
                                        <input type="text" name="libelle" id="" class="form-control" placeholder="Entrer le libelle de la classe">
                                        <button type="submit" class="btn btn-primary btn-sm">Enregistrer</button>
                                    </div>
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered zero-configuration">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Libelle</th>
                                                    <th class="text-center">Actions</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% set i = 0 %} {% for classe in classes %}
                                                <tr>

                                                    <td>{% set i = i+1 %}{{ i }}</td>
                                                    <td>{{ classe.libelle }}</td>

                                                    <td class="text-center">
                                                        <a href={{ path( 'detail_prof', {id:classe.id} ) }} class="info p-0">
                                                            <i class="ft-eye font-medium-3 mr-2"></i>
                                                        </a>
                                                        <a href={{ path( 'edit_prof', {id:classe.id}) }} class="success p-0">
                                                            <i class="ft-edit-2 font-medium-3 mr-2"></i>
                                                        </a>
                                                        <a href={{path( 'delete_prof', {id:classe.id}) }} class="danger p-0">
                                                            <i class="ft-x font-medium-3"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                {% endfor %}

                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>


</div>
</div>



</div>
{% endblock %}