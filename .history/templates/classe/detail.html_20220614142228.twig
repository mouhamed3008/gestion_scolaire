{% extends 'base.html.twig' %} {% block body %}
<div class="main-panel">
    <!-- BEGIN : Main Content-->
    <div class="main-content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <section class="users-view">
                <!-- Media object starts -->
                <div class="row">
                    <div class="col-12 col-sm-7">
                        <div class="media d-flex align-items-center">
                            <a href="javascript:;">
                                <img src={{ asset( 'images/school.jpg')}} alt="user view avatar" class="users-avatar-shadow rounded" height="64" width="64">
                            </a>
                            <div class="media-body ml-3">
                                <h4>
                                    <span class="users-view-name">{{classe.libelle| upper }}</span>
                                </h4>
                                <span class="text-danger">{{ classe.niveau | upper }}</span>
                                <span class="text-info">{{classe.filiere| upper }}</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-5 d-flex justify-content-end align-items-center">
                        <a href="javaScript:void(0);" class="btn btn-sm bg-danger mr-2 px-3 py-1 text-white">Supprimer</a>
                        <a href={{ path( 'edit_prof', {id:classe.id} ) }} class="btn btn-sm btn-primary px-3 py-1">Edit</a>
                    </div>
                </div>

                <div class="col-12">
                    <div class="card card-outline-danger">
                        <div class="card-body">

                            <h5 class="mb-2 text-bold-500"><i class="ft-link mr-2"></i>Classes</h5>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered zero-configuration">
                                    <tr>
                                        <th>Libelle</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                    {% for professeur in professeurs %}
                                    <tr>
                                        <td>{{professeur.nomComplet | capitalize }}</td>
                                        <td class="text-center">
                                            <a href={{ path( 'detail_prof', {id:professeur.id} ) }}>
                                                <i class="ft-eye font-medium-3 mr-2"></i>
                                            </a>
                                            <a href={{ path( 'edit_prof', {id:professeur.id}) }} class="success p-0">
                                                <i class="ft-edit-2 font-medium-3 mr-2"></i>
                                            </a>

                                        </td>
                                    </tr>
                                    {% endfor %}
                                </table>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="card-header bg-primary">
                    <span class="h3">Liste des Ã‰tudiants</span>
                </div>
                <div class="table-responsive mt-3">
                    <table class="table table-striped table-bordered dom-jQuery-events">
                        <thead>
                            <tr>
                                <th>Matricule</th>
                                <th>Nom Complet</th>
                                <th>Login</th>
                                <th>professeur</th>
                                <th>Adresse</th>
                                <th>Sexe</th>
                                <th class="text-center">Actions</th>

                            </tr>
                        </thead>
                        <tbody>
                            {% set i = 0 %} {% for inscription in classes %}
                            <tr>


                                <td>{{ inscription.etudiant.matricule }}</td>
                                <td>{{ inscription.etudiant.nomComplet | capitalize }}</td>
                                <td>{{ inscription.etudiant.email }}</td>
                                <td>{{ inscription.classe.libelle | capitalize }}</td>
                                <td>{{ inscription.etudiant.adresse | capitalize }}</td>

                                <td>{{ inscription.etudiant.sexe | capitalize }}</td>
                                <td class="text-center">
                                    <a href={{ path( 'detail_prof', {id:inscription.etudiant.id} ) }} class="info p-0">
                                        <i class="ft-user font-medium-3 mr-2"></i>
                                    </a>
                                    <a href={{ path( 'edit_prof', {id:inscription.etudiant.id}) }} class="success p-0">
                                        <i class="ft-edit-2 font-medium-3 mr-2"></i>
                                    </a>
                                    <a href={{path( 'delete_prof', {id:inscription.etudiant.id}) }} class="danger p-0">
                                        <i class="ft-x font-medium-3"></i>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}

                        </tbody>

                    </table>
                </div>


        </div>
    </div>


    {% endblock %}