{% extends 'base.html.twig' %} {% block body %}
<div class="main-panel">
    <!-- BEGIN : Main Content-->
    <div class="main-content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12">
                    <div class="content-header">{{ title }}</div>
                </div>
            </div>


            <section id="configuration">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body">
                                    <a href="{{path('add_professeur')}}" class="btn btn-success btn-sm float-right mb-4">
                                      Ajouter
                                    </a>
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered zero-configuration">
                                            <thead>
                                                <tr>
                                                    <th>Matricule</th>
                                                    <th>Nom Complet</th>
                                                    <th>Login</th>
                                                    <th>Classe</th>
                                                    <th>Adresse</th>
                                                    <th>Sexe</th>
                                                    <th class="text-center">Actions</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% set i = 0 %} {% for etudiant in etudiants %}
                                                <tr>


                                                    <td>{{ etudiant.matricule }}</td>
                                                    <td>{{ etudiant.nomComplet }}</td>
                                                    <td>{{ etudiant.email }}</td>
                                                    <td>{{ etudiant.adresse }}</td>
                                                    <td>{{ etudiant.sexe }}</td>
                                                    <td class="text-center">
                                                        <a href={{ path( 'detail_prof', {id:etudiant.id} ) }} class="info p-0">
                                                            <i class="ft-user font-medium-3 mr-2"></i>
                                                        </a>
                                                        <a href={{ path( 'edit_prof', {id:etudiant.id}) }} class="success p-0">
                                                            <i class="ft-edit-2 font-medium-3 mr-2"></i>
                                                        </a>
                                                        <a href={{path( 'delete_prof', {id:etudiant.id}) }} class="danger p-0">
                                                            <i class="ft-x font-medium-3"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                {% endfor %}

                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>


</div>
</div>

{% endblock %}