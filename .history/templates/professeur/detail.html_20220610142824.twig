{% extends 'base.html.twig' %} {% block body %}
<div class="main-panel">
    <!-- BEGIN : Main Content-->
    <div class="main-content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <section class="users-view">
                <!-- Media object starts -->
                <div class="row">
                    <div class="col-12 col-sm-7">
                        <div class="media d-flex align-items-center">
                            <a href="javascript:;">
                                <img src={{ asset( 'images/school.jpg')}} alt="user view avatar" class="users-avatar-shadow rounded" height="64" width="64">
                            </a>
                            <div class="media-body ml-3">
                                <h4>
                                    <span class="users-view-name">{{professeur.nomComplet| upper }}</span>
                                </h4>
                                <span>{{professeur.grade| upper }}</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-5 d-flex justify-content-end align-items-center">
                        <a href="javaScript:void(0);" class="btn btn-sm bg-danger mr-2 px-3 py-1 text-white">Supprimer</a>
                        <a href={{ path( 'edit_prof', {id:professeur.id} ) }} class="btn btn-sm btn-primary px-3 py-1">Edit</a>
                    </div>
                </div>



                <div class="col-12">
                    <!-- User detail starts -->
                    <div class="card-outline-primary">
                        <div class="card-content">
                            <div class="card-body">
                                <div class="row bg-danger bg-lighten-4 rounded mb-3 mx-1 text-center text-lg-left">
                                    <div class="col-12 col-sm-4 p-3 d-flex align-itms-center">
                                        <h6 class="primary align-self-center mb-0 mx-1">Ajouter Par:</h6>
                                        <span class="font-large-1 primary">{{ professeur.createdBy.nomComplet | upper }}</span>
                                    </div>
                                    <div class="col-12 col-sm-4 p-3 d-flex align-itms-center">
                                        <h6 class="primary align-self-center mb-0 mx-1">Nbr Classe:</h6>
                                        <span class="font-large-1 primary">{{classes | length}}</span>
                                    </div>
                                    <div class="col-12 col-sm-4 p-3 d-flex align-itms-center">
                                        <h6 class="primary align-self-center mb-0 mx-1">Nbr Module:</h6>
                                        <span class="font-large-1 primary">{{modules | length}}</span>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                    <!-- User detail ends -->
                </div>

                <div class="col-12">
                    <div class="card card-outline-danger">
                        <div class="card-body">

                            <h5 class="mb-2 text-bold-500"><i class="ft-link mr-2"></i>Classes</h5>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered zero-configuration">
                                    <tr>
                                        <th>Libelle</th>
                                        <th>Actions</th>
                                    </tr>
                                    {% for classe in classes %}
                                    <tr>
                                        <td>{{classe.libelle | capitalize }}</td>
                                        class="text-center"
                                    </tr>
                                    {% endfor %}
                                </table>
                            </div>
                        </div>
                    </div>

                </div>


                <div class="col-12">
                    <div class="card card-outline-info">
                        <div class="card-body">

                            <h5 class="mb-2 text-bold-500"><i class="ft-link mr-2"></i>Modules</h5>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered zero-configuration">
                                    <tr>
                                        <th>Libelle</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                    {% for module in modules %}
                                    <tr>
                                        <td>{{module.libelleModule | capitalize }}</td>
                                        <td class="text-center">
                                            <a href={{ path( 'detail_prof', {id:professeur.id} ) }}>
                                                <i class="ft-eye font-medium-3 mr-2"></i>
                                            </a>
                                            <a href={{ path( 'edit_prof', {id:professeur.id}) }} class="success p-0">
                                                <i class="ft-edit-2 font-medium-3 mr-2"></i>
                                            </a>
                                            <a href={{path( 'delete_prof', {id:professeur.id}) }} class="danger p-0">
                                                <i class="ft-x font-medium-3"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </table>
                            </div>
                        </div>
                    </div>

                </div>



            </section>
        </div>
    </div>


</div>
</div>


{% endblock %}