{% extends 'base.html.twig' %} {% block body %}
<div class="main-panel">
    <!-- BEGIN : Main Content-->
    <div class="main-content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="row">

                <div class="card-header bg-danger col-12 mt-4">
                    <div class="card-title text-center font-weight-bold">{{ title }}</div>

                </div>
            </div>

            <div class="card">
                <div class="col-8 offset-2 mt-5">
                    {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}
                    <div class="row">
                        <div class="col">{{ form_row(form.nomComplet) }}</div>
                        <div class="col">{{ form_row(form.grade, {'attr':{'class':'form-control text-white'}}) }}</div>
                    </div>
                    <div>
                        <label for="">Classe</label> {{ form_widget(form.classes, {'attr':{'class':'form-control text-white'}}) }}
                    </div>
                    <div class="mt-2">
                        <label for="">Modules</label> {{ form_widget(form.modules, {'attr':{'class':'form-control text-white'}}) }}
                    </div>
                    {{form_widget(form.enregistrer, {'attr':{'class':'btn btn-success offset-5 mt-3 mb-5'}}) }} {{ form_end(form) }}
                </div>
            </div>


        </div>


    </div>
</div>


</div>
</div>


{% endblock %}