{% extends 'base.html.twig' %} {% block body %}
<div class="main-panel">
    <!-- BEGIN : Main Content-->
    <div class="main-content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12">
                    <div class="content-header">{{ title }}</div>
                </div>
            </div>


            <section id="configuration">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body">
                                    <button type="button" class="btn btn-success btn-sm float-right mb-4" data-toggle="modal" data-target="#large">
                                    Launch Modal
                                </button>
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered zero-configuration">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Nom Complet</th>
                                                    <th>Grade</th>
                                                    <th class="text-center">Actions</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% set i = 0 %} {% for professeur in professeurs %}
                                                <tr>

                                                    <td>{% set i = i+1 %}{{ i }}</td>
                                                    <td>{{ professeur.nomComplet }}</td>
                                                    <td>{{ professeur.grade }}</td>
                                                    <td class="text-center">
                                                        <a href={{ path( 'detail_prof', {id:professeur.id} ) }} class="info p-0">
                                                            <i class="ft-user font-medium-3 mr-2"></i>
                                                        </a>
                                                        <a href={{ path( 'edit_prof', {id:professeur.id}) }} class="success p-0">
                                                            <i class="ft-edit-2 font-medium-3 mr-2"></i>
                                                        </a>
                                                        <a href={{path( 'delete_prof', {id:professeur.id}) }} class="danger p-0">
                                                            <i class="ft-x font-medium-3"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                {% endfor %}

                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>


</div>
</div>


<div class="modal fade text-left" id="large" tabindex="-1" role="dialog" aria-labelledby="myModalLabel17" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h4 class="modal-title" id="myModalLabel17">Ajout d'un Professeur</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true"><i class="ft-x font-medium-2 text-bold-700"></i></span>
              </button>
            </div>
            <div class="modal-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col">{{ form_row(form.nomComplet) }}</div>
                    <div class="col">{{ form_row(form.grade) }}</div>
                </div>
                <div>
                    <label for="">Classe</label> {{ form_widget(form.classes, {'attr':{'class':'form-control text-white'}}) }}
                </div>
                <div class="mt-2">
                    <label for="">Modules</label> {{ form_widget(form.modules, {'attr':{'class':'form-control text-white'}}) }}
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn bg-light-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
</div>
{% endblock %}